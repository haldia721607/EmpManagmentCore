<div class="gray-bg">
    @if (ViewBag.ErrorTitle == null)
    {
    <div class="middle-box text-center animated fadeInDown">
    <h1>Something went worng.</h1>
    <hr />
    <h3 class="font-bold">
        An error occured while processing your request. The support
        team is notified and we are working on the fix
    </h3>
    <h5>Please contact us on helpdesy@Myself.com</h5>
    <hr />
    </div>
    }
    else
    {
        <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
        <hr />
        <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
    }
</div>