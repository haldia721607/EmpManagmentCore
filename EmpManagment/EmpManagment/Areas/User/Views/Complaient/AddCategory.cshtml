@model ComplaientCategory
@{
    ViewBag.Title = "Add Complaient Category";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Complaient Category</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Home" asp-area="User">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Category Lists</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Add Complaient Category</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="form-group  row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">
                            <h3>Add Complaient Category</h3>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                    <form class="m-t" role="form" asp-area="User" asp-controller="Complaient" asp-action="AddCategory" method="post">
                        <div class="form-group  row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <div asp-validation-summary="All" class="text-danger font-bold"></div>
                            </div>
                            <div class="col-sm-4"></div>
                        </div>

                        <div class="form-group  row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" asp-for="Description">Description</label>
                            <div class="col-sm-6">
                                <input type="text" asp-for="Description" class="form-control">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" asp-for="Status">Status</label>
                            <div class="col-sm-6">
                                <select id="ddlcountry" asp-for="Status" class="form-control">
                                    <option value="">Select Status</option>
                                    <option value="true">Active</option>
                                    <option value="false">Not Active</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary block  m-b">Add Category</button>
                            </div>
                            <div class="col-sm-2">
                                <a class="btn btn-primary" asp-action="ListCategory" asp-controller="Complaient" asp-area="User"> Category List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
    $(document).ready(function () {
        if ('@ViewBag.message' == "Added") {
            // Display a success toast, with a title
            toastr.success(message = 'Category created successfully.', title ='Added')
        }
        });
    </script>
}
