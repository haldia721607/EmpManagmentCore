@model AddPasswordViewModel

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Add Password</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-controller="Home" asp-area="User">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Add Password</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Add Password</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
    <div class="col-lg-12">
        <p class="text-info">
            You have used an external account to login and do not have a local username and
            password. Simply set a new password if you want to login using a local account.
            Use your email as the username.
        </p>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="form-group  row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">
                            <h3>Add Password</h3>
                        </div>
                        <div class="col-sm-4">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    <form method="post">
                        <div class="form-group row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" asp-for="NewPassword">New Password</label>
                            <div class="col-sm-6">
                                <input type="text" asp-for="NewPassword" class="form-control" placeholder="New Password" required="">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" asp-for="ConfirmPassword">Confirm Password</label>
                            <div class="col-sm-6">
                                <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required="">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary block full-width m-b" style="width:auto"> Set Password </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>