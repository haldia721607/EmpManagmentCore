@model CreateRoleViewModel
@{
    ViewBag.Title = "Create Role";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="form-group  row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">
                            <h3>Create Role</h3>
                        </div>
                        <div class="col-sm-4">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    <form class="m-t" role="form" asp-area="User" asp-controller="Administration" asp-action="CreateRole" method="post">
                        <div class="form-group  row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" asp-for="RoleName">Name</label>
                            <div class="col-sm-6">
                                <input type="text" asp-for="RoleName" class="form-control" placeholder="Name" required="">
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary block full-width m-b">Create Role</button>
                            </div>
                            <div class="col-sm-2">

                            </div>
                        </div>
                        <div class="form-group  row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4">
                                <h3>Back to list roles</h3>
                                <a class="btn btn-sm btn-white btn-block" asp-action="ListRoles" asp-controller="Administration" asp-area="User">Role Manager</a>
                            </div>
                            <div class="col-sm-4">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
