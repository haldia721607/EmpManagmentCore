@model LoginViewModel
@{ string returnUrl = @Context.Request.Query["returnUrl"]; }
<div class="gray-bg">
    <div class="text-center animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name" style="font-size: 110px">IN+</h1>
            </div>
            <h3>Welcome to IN+</h3>
            <p>
                Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
            </p>
            <p>Login in. To see it in action.</p>
            <div class="row" style="text-align: left;">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ibox">
                                <div class="ibox-content gray-bg">
                                    <form class="m-t" role="form" asp-action="Login" asp-controller="Account" asp-area="Comman" asp-route-returnUrl="@returnUrl" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label" asp-for="Email">Email</label>
                                            <div class="col-sm-9">
                                                <input type="email" asp-for="Email" class="form-control" placeholder="Username" required="">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label" asp-for="Password">Password</label>
                                            <div class="col-sm-9">
                                                <input type="password" asp-for="Password" class="form-control" placeholder="Password" required="">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9">
                                                <div class="checkbox">
                                                    <label asp-for="RememberMe">
                                                        <input asp-for="RememberMe" />
                                                        @Html.DisplayNameFor(m => m.RememberMe)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-3">
                                                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
                                            </div>
                                            <div class="col-sm-3"><a class="btn btn-white btn-block full-width m-b" href="@Url.Action("Register", "Account", new { Area = "Comman" })">Create an account</a></div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-3">
                                                <a asp-action="ForgotPassword" asp-controller="Account" asp-area="Comman" >Forgot Password?</a>
                                            </div>
                                            <div class="col-sm-3"></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h1>External Login</h1>
                    <hr />
