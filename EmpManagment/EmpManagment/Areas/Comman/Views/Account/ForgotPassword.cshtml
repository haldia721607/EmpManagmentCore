@model ForgotPasswordViewModel

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="form-group  row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">
                            <h3>Forgot Password</h3>
                        </div>
                        <div class="col-sm-4">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    <form asp-action="ForgotPassword" asp-controller="Account" asp-area="Comman" method="post">
                        <div class="form-group row">
                            <div class="col-sm-2"></div>
                            <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                            <div class="col-sm-6">
                                <input type="text" asp-for="Email" class="form-control" placeholder="Email" required="">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-primary block full-width m-b">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>